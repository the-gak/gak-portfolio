---
import Layout from "./main.astro";
const { frontmatter, toc, category } = Astro.props;
---



<Layout title={frontmatter.title}>
  <main>
    <div id="parent-div" class="flex flex-col md:flex-row md:gap-8">
      <div id="content-section" class="flex-row pl-32 md:pl-64 lg:pl-64 pr-0 mt-16 md:mt-24">
        <h1 class="text-2xl font-bold tracking-tight text-left sm:text-3x1 md:mb-8 md:text-4xl dark:text-neutral-100 lg:text-4xl md:leading-none">
          {frontmatter.title}
        </h1>
        <article class="flex-1 w-full max-w-none prose-sm prose dark:prose-invert prose-a:text-indigo-600">
          <slot />
        </article>
      </div>
      <aside id="toc-section" class="w-full md:w-64 md:pl-4 md:pr-80 mt-16 md:mt-24 md:-ml-0">
        {toc && toc.length > 0 && (
          <nav class="fixed top-42">
            <h2 class="text-lg font-semibold mb-3">Table of Contents</h2>
            <ul class="space-y-2 text-sm">
              {toc.map((item) => (
                <li>
                  <a href={`/resources/${category}/${item.slug}`} class="text-indigo-600 hover:underline">
                    {item.title ?? item.slug}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        )}
      </aside>
    </div>
  </main>
</Layout>
